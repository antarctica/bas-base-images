{
  "builders": [
    {
      "boot_command": [
        "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `template`}}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "0",
      "guest_os_type": "centos-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "preseed",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "output_directory": "artefacts/ovas/{{user `template`}}-vmware-iso",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "password",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "vmware-iso",
      "vm_name": "{{ user `template` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      },
      "vmx_remove_ethernet_interfaces": true
    },
    {
      "image": "{{ user `do_image` }}",
      "monitoring": true,
      "private_networking": true,
      "region": "{{ user `do_region` }}",
      "size": "{{ user `do_size` }}",
      "snapshot_name": "{{user `template`}}-{{isotime \"2006-01-02\"}}",
      "ssh_username": "root",
      "type": "digitalocean"
    }
  ],
  "post-processors": [
    {
      "environment_vars": [
        "INPUT={{user `template`}}"
      ],
      "only": ["vmware-iso"],
      "scripts": [
        "artefacts/scripts/common/desktop/vmware-ova.sh"
      ],
      "type": "shell-local"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}",
        "TEMPLATE_NAME={{user `template`}}",
        "TEMPLATE_VERSION={{isotime \"2006-01-02\"}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "provisioning/scripts/centos/common/update.sh",
        "provisioning/scripts/common/common/sshd.sh",
        "provisioning/scripts/centos/common/sudoers.sh",
        "provisioning/scripts/common/common/sudoers.sh",
        "provisioning/scripts/common/common/metadata.sh"
      ],
      "type": "shell"
    },
    {
      "environment_vars": [
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "only": ["vmware-iso"],
      "scripts": [
        "provisioning/scripts/common/desktop/root-public-key.sh",
        "provisioning/scripts/common/desktop/minimise.sh"
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "only": ["digitalocean"],
      "scripts": [
        "provisioning/scripts/centos/cloud/locale.sh",
        "provisioning/scripts/centos/cloud/selinux.sh"
      ],
      "type": "shell"
    },
    {
      "environment_vars": [
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "provisioning/scripts/common/common/remove-host-keys.sh",
        "provisioning/scripts/centos/common/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "template": "antarctica-centos7",
    "cpus": "1",
    "disk_size": "65536",
    "do_image": "centos-7-x64",
    "do_region": "lon1",
    "do_size": "s-1vcpu-1gb",
    "headless": "",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "iso_checksum": "506e4e06abf778c3435b4e5745df13e79ebfc86565d7ea1e128067ef6b5a6345",
    "iso_checksum_type": "sha256",
    "iso_name": "CentOS-7-x86_64-DVD-1804.iso",
    "memory": "1024",
    "mirror": "http://mirrors.kernel.org/centos",
    "mirror_directory": "7.5.1804/isos/x86_64",
    "name": "centos-7.5",
    "no_proxy": "{{env `no_proxy`}}"
  }
}
